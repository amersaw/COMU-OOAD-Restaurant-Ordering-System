@model List<ROSys.WebClient.Models.FoodLineItem>
@{
    ViewBag.Title = "OderPreview";
    decimal price = Model.Sum(a => a.Count * a.Description.Price);
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Unit Price</th>
            <th>Count</th>
            <th>Total Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (ROSys.WebClient.Models.FoodLineItem item in Model)
        {
            <tr>
                <td>@item.Description.Name</td>
                <td>@item.Description.Description</td>
                <td>@item.Description.Price</td>
                <td>@item.Count</td>
                <td>@(item.Count * item.Description.Price)</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="4">TOTAL PRICE : </td>
            <td>@price</td>
        </tr>
    </tfoot>
</table>



<a href="@Url.Action("SubmitOrder", new { tableNo = ViewBag.TableNo})" class="btn btn-default pull-right">Submit Order</a>
